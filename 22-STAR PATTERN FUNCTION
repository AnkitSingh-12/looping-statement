def righttriangle(n):
    spaces=0
    stars=1
    for row in range(1,n+1):
        for sp in range(1,spaces+1):
            print(' ',end=' ')
        for st in range(1,stars+1):
            print('*',end=' ')
        print()
        spaces=0
        stars+=1
righttriangle(5)

