#7#
'''
           * 
         * * 
       * * * 
     * * * * 
   * * * * * 
'''
def lefttriangle(n):
    spaces=n-1
    stars=1
    for row in range(1,n+1):
        for sp in range(1,spaces+1):
            print(' ',end=' ')
        for st in range(1,stars+1):
            print('*',end=' ')
        print()
        spaces-=1
        stars+=1
lefttriangle(5)


#-----------------------------------------------------------------------#


#8#
'''  
            * 
          * * *
        * * * * *
      * * * * * * *
    * * * * * * * * *
  * * * * * * * * * * *
* * * * * * * * * * * * *
'''
def triangle(n):
    spaces=n-1
    stars=1
    for row in range(1,n+1):
        for sp in range(1,spaces+1):
            print(' ',end=' ')
        for st in range(1,stars+1):
            print('*',end=' ')
        print()
        spaces-=1 
        stars+=2
triangle(7)         
