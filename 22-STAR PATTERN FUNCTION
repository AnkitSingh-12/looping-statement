#7#
'''
           * 
         * * 
       * * * 
     * * * * 
   * * * * * 
'''
def lefttriangle(n):
    spaces=n-1
    stars=1
    for row in range(1,n+1):
        for sp in range(1,spaces+1):
            print(' ',end=' ')
        for st in range(1,stars+1):
            print('*',end=' ')
        print()
        spaces-=1
        stars+=1
lefttriangle(5)


#-----------------------------------------------------------------------#


#8#
'''  
            * 
          * * *
        * * * * *
      * * * * * * *
    * * * * * * * * *
  * * * * * * * * * * *
* * * * * * * * * * * * *
'''
def triangle(n):
    spaces=n-1
    stars=1
    for row in range(1,n+1):
        for sp in range(1,spaces+1):
            print(' ',end=' ')
        for st in range(1,stars+1):
            print('*',end=' ')
        print()
        spaces-=1 
        stars+=2
triangle(7)         
#-------------------------------------------------------------------------#

#9#


''' 
    * * * * * * * * * * * * *
      * * * * * * * * * * *
        * * * * * * * * *
          * * * * * * *
             * * * * *
               * * *
                 *

'''

def oppositetriangle(n):
    spaces=0
    stars=n*2-1
    for row in range(1,n+1):
        for sp in range(1,spaces+1):
            print(' ',end=' ')
        for st in range(1,stars+1):
            print('*',end=' ')
        print()
        spaces+=1
        stars-=2
oppositetriangle(7)

#--------------------------------------------------------------------#

#10#
'''    
    
      * 
    * * * 
  * * * * * 
* * * * * * *         
  * * * * * 
    * * * 
      * 
    
    '''
    
 
def diamondtriangle(n):
    spaces=n//2
    stars=1
    for row in range(1,n+1):
        for sp in range(1,spaces+1):
            print(' ',end=' ')
        for st in range(1,stars+1):
            print('*',end=' ')
        print()
        if row<=n//2:
            spaces-=1
            stars+=2
        else:
           spaces+=1
           stars-=2
diamondtriangle(7)
    
 #-------------------------------------------------------------------------------#


